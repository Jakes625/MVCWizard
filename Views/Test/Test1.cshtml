@model String

<div class="body-content tw">
    <div class="container">
        <form action="Test" method="post">
            <p>Please Enter your Name</p>

            @Html.ValidationSummary(false, "Errors", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBox("Name", Model, new { @class = "form-control" })
                        @Html.ValidationMessage("Name")
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary" type="submit" name="StepMove" value="+">Next</button>
                </div>
            </div>
        </form>
    </div>
</div>